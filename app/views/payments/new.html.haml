.container
  %h2.no-margin Payment Switch Client Simulator
.clear-line
.container
  .col-6
    = form_for @payment, url: payments_post_path do |f|
      = f.label :client_key do
        Client ID
        %small provided by payment switch
      = f.text_field :client_key, {readonly: true}

      = f.label :title do
        Title
        %small string
      = f.text_field :title

      = f.label :description do
        Description
        %small string
      = f.text_field :description

      = f.label :total do
        Total
        %small decimal
      = f.number_field :total

      = f.label :ref_no do
        Ref Num
        %small alphanumeric, no spaces, autogenerated
      = f.text_field :ref_no, {readonly: true}

      = f.label :currency do
        Currency
        %small PHP only for now
      = f.text_field :currency, {readonly: true}

      = f.label :email do
        Email
        %small string
      = f.email_field :email

      = f.label :mobile_no do
        Mobile Number
        %small string
      = f.text_field :mobile_no

      = f.label :client_tracking_id do
        Tracking ID
        %small string
      = f.text_field :client_tracking_id
      
      .clear-20
      .clear-line

      = label_tag do
        Transaction Info

      - for i in 0..4 do
        = label_tag "Info #{i + 1}"

        .col-6.no-collapse
          = label_tag "payment[info][][title]" do
            Title
            %small string
          = text_field_tag "payment[info][][title]"
        .col-6.no-collapse
          = label_tag "payment[info][][value]" do
            Value
            %small string
          = text_field_tag "payment[info][][value]"

      .clear-20
      .clear-line

      = label_tag do
        Transaction items
        %small make sure the item prices adds up to the total

      - for i in 0..4 do
        = label_tag "payment[items][][name]" do
          - "Item #{i + 1}"
        .col-6.no-collapse
          = label_tag "payment[items][][name]" do
            Name
            %small string
          = text_field_tag "payment[items][][name]"
        .col-6.no-collapse
          = label_tag "payment[items][][price]" do
            Price
            %small decimal
          = number_field_tag "payment[items][][price]"

      = f.label :urls do
        URLS
        %small string
      = text_field_tag "payment[urls][callback]", nil, {placeholder: "Callback"}
      .clear-10
      = text_field_tag "payment[urls][postback]", nil, {placeholder: "Postback"}

      .clear-20
      .clear-line
      .clear-20

      = f.submit "Pay", class: "button"
